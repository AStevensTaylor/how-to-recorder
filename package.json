{
	"name": "how-to-recorder",
	"displayName": "how-to-recorder",
	"version": "0.1.0",
	"author": "Ahren Stevens-Taylor <github+how-to-recorder@stevenstaylor.dev>",
	"description": "Create step-by-step documentation by recording browser interactions with screenshots",
	"type": "module",
	"license": "MIT",
	"keywords": [
		"chrome-extension",
		"react",
		"vite",
		"create-chrome-ext"
	],
	"packageManager": "bun@1.3.5+4E5CA4EDC13654E9-0dbae1a3b0066176-338B5156BC4128F4-37c29c0faf44f57b",
	"engines": {
		"node": ">=14.18.0"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"zip": "bun run build && bun src/zip.ts",
		"test": "bun test",
		"test:watch": "bun test --watch"
	},
	"dependencies": {
		"idb": "^8.0.3",
		"jszip": "^3.10.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@crxjs/vite-plugin": "^2.0.0-beta.26",
		"@types/bun": "^1.3.7",
		"@types/chrome": "^0.0.246",
		"@types/gulp": "^4.0.18",
		"@types/gulp-zip": "^4.0.4",
		"@types/react": "^18.2.28",
		"@types/react-dom": "^18.2.13",
		"@vitejs/plugin-react": "^4.1.0",
		"gulp": "^5.0.0",
		"gulp-zip": "^6.0.0",
		"happy-dom": "^20.5.0",
		"typescript": "^5.2.2",
		"vite": "^5.4.10"
	}
}
